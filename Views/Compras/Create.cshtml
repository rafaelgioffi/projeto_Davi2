@model ProjetoFinal.Models.Compra

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-for="ClienteID" class="form-select" asp-items="ViewBag.ClienteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoID" class="control-label"></label>
                <select asp-for="ProdutoID" class="form-select" asp-items="ViewBag.ProdutoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" id="DataCompra" class="form-control" value="@DateTime.Now" placeholder="@DateTime.Now" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamento" class="control-label"></label>
                <select asp-for="FormaPagamento" class="form-control form-select">
                    <option value="A Definir" selected>A Definir</option>
                    <option value="Crédito">Crédito</option>
                    <option value="Débito">Débito</option>
                    <option value="Dinheiro">Dinheiro</option>
                    <option value="PIX">PIX</option>
                </select>
                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group d-grid gap-2 d-md-block mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-3">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById('DataCompra');
            const agoraD = new Date().toDateString();
            let agoraT = new Date().toTimeString();
            // alert(agoraT.length);
            agoraT = agoraT.substring(0, agoraT.length - 3);
            // alert(agoraT);
            const agora = (agoraD + agoraT);
            input.value = agora;
            input.placeholder = agora;
        });
    </script>
}
